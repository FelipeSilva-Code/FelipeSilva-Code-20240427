@model ManagementSystem.Models.ViewModels.EmployeeViewModel

@{

    
    ViewData["Title"] = "Create";
}

<h1>Adicionar Colaborador</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="IdUser" class="control-label">Usuários</label>
                <select asp-for="IdUser" class="form-control" asp-items="@(new SelectList(Model.AllUsers,"Id",
                "Login"))"></select>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="IdUnity" class="control-label">Unidades</label>
                <select asp-for="IdUnity" class="form-control" asp-items="@(new SelectList(Model.AllUnities,"Id",
                "Name"))"></select>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-action="Index">Voltar</a>
</div>

